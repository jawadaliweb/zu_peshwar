<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:sweet="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:background="@drawable/alert_background_light" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="16dp" android:layout_weight="1">
        <LinearLayout android:orientation="vertical" android:paddingTop="20dp" android:paddingBottom="20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="14dp" android:textStyle="bold" android:textColor="@android:color/black" android:gravity="center" android:id="@+id/tvTitle" android:layout_width="match_parent" android:layout_height="wrap_content" android:fontFamily="@font/roboto" android:paddingStart="16dp" android:paddingEnd="16dp"/>
            <TextView android:textSize="12dp" android:textColor="@android:color/black" android:gravity="center" android:id="@+id/tvMessage" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:alpha="0.5" android:fontFamily="@font/roboto" android:paddingStart="16dp" android:paddingEnd="16dp"/>
        </LinearLayout>
        <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
            <LinearLayout android:orientation="vertical" android:id="@+id/actionsLayout" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </ScrollView>
    </LinearLayout>
    <TextView android:textSize="14dp" android:textColor="@android:color/black" android:gravity="center" android:id="@+id/tvCancel" android:background="@drawable/alert_background_light" android:paddingTop="20dp" android:paddingBottom="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="16dp" android:text="Cancel" android:onClick="onCancelClick" android:fontFamily="@font/roboto" android:paddingStart="10dp" android:paddingEnd="10dp" android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>
</LinearLayout>
